{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "baseUrl": "src",
    "paths": {
       "@containers/*": ["./containers/*"],
       "@components/*": ["./components/*"],
       "@screens/*": ["./screens/*"],
       "@hooks/*": ["./hooks/*"]
    },
    "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js"]
  }
}
